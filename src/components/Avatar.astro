---
import { Picture } from "astro:assets";
import { config } from "@data/config";

interface Props {
  className?: string;
  style?: string;
}

const { className } = Astro.props;
---

{
  config.avatar && (
    <Picture
      src={import("/data/avatar.jpg")}
      width={128}
      formats={["avif", "webp"]}
      fallbackFormat="jpg"
      densities={[1, 2]}
      alt="Avatar image"
      class={className}
    />
  )
}
