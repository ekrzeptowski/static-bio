---
import { Icon } from "astro-icon/components";
import { type ThemeProps } from "@/types/theme";
import Avatar from "@/components/Avatar.astro";

const {
  config: { seo },
  links,
  social,
} = Astro.props as ThemeProps;
---

<div class="container mx-auto p-4 max-w-screen-md">
  <div class="flex gap-2">
    <Avatar className="inline" />
    <div class="flex flex-col justify-center">
      <h1>{seo.title}</h1>
      <h2>{seo.description}</h2>
    </div>
  </div>

  <p class="flex gap-4">
    {
      social.map((profile) => (
        <a href={profile.slug ? `/go/${profile.slug}` : profile.href}>
          <Icon name={profile.icon} class="text-4xl" />
        </a>
      ))
    }
  </p>
  <div class="flex flex-col">
    {
      links.map((link) => (
        <a
          href={link.slug ? `/go/${link.slug}` : link.href}
          class="flex items-center gap-2 border p-4 my-2 justify-center"
        >
          {link.icon && <Icon name={link.icon} class="text-3xl" />}
          <div class="flex flex-col">
            <div>{link.title}</div>
            <p class="text-gray-400 text-xs">{link.description}</p>
          </div>
        </a>
      ))
    }
  </div>
</div>
