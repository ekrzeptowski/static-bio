---
import { Icon } from "astro-icon/components";
import { ThemeProps } from "@/types/theme";
const { config, links, social } = Astro.props as ThemeProps;
---

<div class="container mx-auto p-4 max-w-screen-md">
  <h1>{config.title}</h1>
  <h2>{config.description}</h2>
  <p class="flex gap-4">
    {
      social.map((profile) => (
        <a href={profile.href}>
          <Icon name={profile.icon} class="text-4xl" />
        </a>
      ))
    }
  </p>
  <div class="flex flex-col">
    {
      links.map((link, index) => (
        <a href={link.href} class="flex items-center gap-2 border p-4 my-2 justify-center">
          {link.icon && <Icon name={link.icon} class="text-3xl" />}
          <div class="flex flex-col">
            <div>{link.title}</div>
            <p class="text-gray-400 text-xs">{link.description}</p>
          </div>
        </a>
      ))
    }
  </div>
</div>
